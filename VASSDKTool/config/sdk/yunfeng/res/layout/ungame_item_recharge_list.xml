<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:text="100"
        android:background="@drawable/ungame_selector_gray_red"
        android:id="@+id/ungame_txv_recharge_item"
        android:textColor="@color/ungame_balck_text_default"
        android:textSize="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ungame_imv_recharge_hot"
        android:layout_gravity="top|right"
        android:src="@drawable/ungame_ic_recharge_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>