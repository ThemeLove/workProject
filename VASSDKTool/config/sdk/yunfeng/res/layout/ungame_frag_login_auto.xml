<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ungame_circle_white_light_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.ungame.android.sdk.widget.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/ungame_imv_login_auto_header"
            android:src="@drawable/ungame_ic_header_gray"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/ungame_txv_login_auto_nickname"
            android:textSize="14sp"
            android:textColor="@color/ungame_blue"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ungame_imv_login_auto_header"
            android:text="nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ungame_txv_login_auto_logining"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@id/ungame_txv_login_auto_nickname"
            android:layout_below="@id/ungame_txv_login_auto_nickname"
            android:textSize="14sp"
            android:textColor="@color/ungame_balck_text_default"
            android:layout_toRightOf="@id/ungame_imv_login_auto_header"
            android:text="正在登录..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/ungame_txv_login_auto_nickname"
            android:id="@+id/ungame_imv_login_auto_change"
            android:src="@drawable/ungame_ic_change_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>