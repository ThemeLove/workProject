<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="190dp"
        android:layout_centerInParent="true"
        android:background="@color/qmyx_17168_dialog_bg">

        <TextView
            android:id="@+id/tv_tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="温馨提示"
            android:textColor="@color/qmyx_17168_deep_black"
            android:textSize="@dimen/qmyx_17168_text_size_36"/>

        <TextView
            android:id="@+id/tv_tips_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tips_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="需要下载17168全民游戏APP后领取礼包"
            android:textColor="@color/qmyx_17168_light_black"
            android:textSize="@dimen/qmyx_17168_text_size_28"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_tips_content"
            android:layout_marginTop="40dp"
            android:background="@color/qmyx_17168_light_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/qmyx_17168_light_black"
                android:textSize="@dimen/qmyx_17168_text_size_32"/>

            <View
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/qmyx_17168_light_grey"/>

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下载"
                android:textColor="@color/qmyx_17168_light_black"
                android:textSize="@dimen/qmyx_17168_text_size_32"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>