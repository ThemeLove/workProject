<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/niuniu_transparent_window_bg"
    android:padding="2dip">




    <RelativeLayout
        android:id="@+id/niuniu_rel_main_menu"
        android:layout_width="400dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/niuniu_rel_menu_info"
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:background="@drawable/niuniu_connertop_bg"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip">

            <LinearLayout
                android:id="@+id/niuniu_lin_user_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/niuniu2_login_title_imv"
                    android:layout_marginRight="8dip">
                </ImageView>
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#C9C9C9"
            android:layout_below="@id/niuniu_rel_menu_info"/>

        <LinearLayout
            android:id="@+id/mViewflipper_niuniu_view_menugrid"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/niuniu_rel_menu_info"
            android:layout_marginTop="0.4dip"
            android:background="@drawable/niuniu_connerbottom_bg"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/niuniu_lin_tip_to_guest"
                android:layout_width="match_parent"
                android:layout_height="90dip"
                android:orientation="horizontal"
                android:layout_marginBottom="10dip"
                android:paddingRight="65dip"
                android:paddingLeft="65dip"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/niuniu_menu_warn_to_guest1"
                        android:textSize="14sp"
                        android:textColor="@color/niuniu_text_color_normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/niuniu_menu_warn_to_guest2"
                        android:textSize="14sp"
                        android:textColor="@color/niuniu_text_color_normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="@string/niuniu_menu_warn_to_guest3"
                        android:textSize="14sp"
                        android:textColor="@color/niuniu_text_color_normal"/>


                </LinearLayout>

                <Button
                    android:id="@+id/niuniu_menu_btn_goto_update_account"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/niuniu_menugrid_ensure_update"
                    android:background="@null"
                    android:textColor="@drawable/niuniu_btn_text_color_orange"
                    android:textSize="14sp"
                    android:gravity="right|center_vertical"
                    android:layout_weight="1"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#C9C9C9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/niuniu_menu_btn_account"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/niuniu_btn_account_center"
                    android:drawableTop="@drawable/niuniu2_menu_btn_account"
                    android:drawablePadding="5dip"
                    android:textColor="@color/niuniu_btn_weibo_grey_cj"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/niuniu_menu_btn_kefu"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/niuniu_btn_kefu"
                    android:drawableTop="@drawable/niuniu2_menu_btn_kefu"
                    android:drawablePadding="5dip"
                    android:textColor="@color/niuniu_btn_weibo_grey_cj"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_title_niuniu_view_menugrid"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignTop="@+id/niuniu_rel_main_menu"
        android:layout_alignRight="@+id/niuniu_rel_main_menu"
        android:gravity="center">

            <ImageButton
                android:id="@+id/mCloseView_niuniu_view_menugrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/niuniu_btn_close_bg" />
    </LinearLayout>

</RelativeLayout>