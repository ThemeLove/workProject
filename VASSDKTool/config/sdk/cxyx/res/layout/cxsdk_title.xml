<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cxsdk_title_hight"
    android:id="@+id/cx_title"
    android:background="@color/cxsdk_blue" >

    <ImageView 
	    android:id="@+id/back"
	    android:layout_width="70dp"
	    android:layout_height="70dp"
	    android:src="@drawable/cxsdk_btn_back"
	    android:paddingLeft="@dimen/cxsdk_margin_left_and_right"
	    android:paddingRight="@dimen/cxsdk_margin_left_and_right"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:visibility="gone"/>

    <com.cxyx.sdk.view.SwitchButton 
        android:id="@+id/switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/back"
        android:layout_marginRight="@dimen/cxsdk_margin_left_and_right"
        android:visibility="gone"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/cxsdk_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">
	    <TextView
	        android:id="@+id/version"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:textColor="@color/cxsdk_white"
	        android:visibility="gone" />
	    
        <ImageView
	        android:id="@+id/title_closeBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/cxsdk_close"
	        android:layout_marginRight="10dp"
	        android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>