<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>


    </style>

    <style name="Widget"></style>


    <style name="gamecat_button_common_orange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/gamecat_button_shape_unpressed</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/gamecat_color_ffffff</item>
    </style>

    <style name="gamecat_item_input_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gamecat_color_333</item>
        <item name="android:textColorHint">@color/gamecat_hint_color</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="gamecatpay_button_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/gamecatpay_button</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/gamecat_color_ffffff</item>
    </style>

</resources>
