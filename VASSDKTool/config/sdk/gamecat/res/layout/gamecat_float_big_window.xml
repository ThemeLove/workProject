<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_big_window"
    android:layout_width="210dp"
    android:layout_height="51dp"
    android:background="@drawable/game_cat_float_window_background">

    <ImageView
        android:id="@+id/id_image_view_game_cat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/game_cat_float_window_cat"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/id_image_view_game_cat_icon"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/id_text_view_game_cat_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableTop="@drawable/game_cat_float_window_personal"
            android:gravity="center"
            android:text="个人"
            android:textColor="@color/gamecat_color_f96e30"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/id_text_view_game_cat_gifts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableTop="@drawable/game_cat_float_window_gifts"
            android:gravity="center"
            android:text="礼包"
            android:textColor="@color/gamecat_color_f96e30"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_text_view_game_cat_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:drawableTop="@drawable/game_cat_float_window_forum"
            android:gravity="center"
            android:text="论坛"
            android:textColor="@color/gamecat_color_f96e30"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>