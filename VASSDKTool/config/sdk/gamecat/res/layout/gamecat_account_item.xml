<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/id_image_view_account_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/game_cat_account_selected" />

    <ImageView
        android:id="@+id/id_image_view_account_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/id_image_view_account_selected"
        android:src="@drawable/game_cat_account_qq" />

    <TextView

        android:id="@+id/id_text_view_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/id_image_view_account_type"
        android:text="asdfasdfasdfasdfasdfasd"
        android:textColor="@color/gamecat_color_999999"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/id_image_view_clear_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/game_cat_login_delete" />


</RelativeLayout>