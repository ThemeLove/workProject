<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:clickable="true"
    android:orientation="vertical"
    android:scrollbars="none">


    <RelativeLayout
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gamecat_toast_shape"

        >


        <TextView
            android:id="@+id/waiting_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="数据加载中..."
            android:textColor="@color/gamecat_color_ffffff"

            android:textSize="14dp"

            />

        <ImageView
            android:id="@+id/waiting_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/waiting_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gamecat_loading_miao" />

    </RelativeLayout>

</RelativeLayout>















