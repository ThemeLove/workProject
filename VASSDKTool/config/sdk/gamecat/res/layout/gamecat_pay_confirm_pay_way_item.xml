<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_layout_pay_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_image_view_pay_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/game_cat_alipay" />

        <TextView
            android:id="@+id/id_text_view_pay_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is test"
            android:textColor="@color/gamecat_color_cccccc"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/id_image_view_selected_pay_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/id_layout_pay_item"
        android:layout_alignTop="@id/id_layout_pay_item"
        android:src="@drawable/game_cat_seleted" />

</RelativeLayout>