<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/qmyx_17168_bg_splash_h"
              android:orientation="horizontal">
        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:src="@drawable/qmyx_17168_bg_bot_white"/>
            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:src="@drawable/qmyx_17168_bg_bot_color"/>
            <ImageView
                android:id="@+id/iv_third"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:src="@drawable/qmyx_17168_bg_bot_color"/>
            <ImageView
                android:id="@+id/iv_fourth"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:src="@drawable/qmyx_17168_bg_bot_color"/>
        </LinearLayout>

    <TextView
        android:id="@+id/qmyx_17168_tv_version"
        android:textColor="@color/qmyx_17168_white"
        android:textSize="12sp"
        android:text="版本号"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>