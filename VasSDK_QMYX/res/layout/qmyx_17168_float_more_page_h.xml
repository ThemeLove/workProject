<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/qmyx_17168_dialog_bg_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header_nav"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/qmyx_17168_shape_bar">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxEms="10"
                android:text="更多"
                android:textColor="@color/qmyx_17168_white"
                android:textSize="@dimen/qmyx_17168_text_size_36"/>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/qmyx_17168_icon_close_white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_nav">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/qmyx_17168_float_more_bg_h_1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:scaleType="fitEnd"
                android:layout_alignParentBottom="true"
                android:src="@drawable/qmyx_17168_float_more_bg_h_2"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_download_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/qmyx_17168_selector_float_more"/>


        <RelativeLayout
            android:id="@+id/rl_service"
            android:layout_above="@+id/iv_download_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/qmyx_17168_service"/>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_service"
                android:background="@drawable/qmyx_17168_bg_button_service">

                <TextView
                    android:id="@+id/tv_qq_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/qmyx_17168_customer_qq"
                    android:drawablePadding="10dp"
                    android:paddingLeft="2dp"
                    android:singleLine="true"
                    android:text="@string/qmyx_17168_service_qq"
                    android:textColor="@color/qmyx_17168_white"
                    android:textSize="@dimen/qmyx_17168_text_size_28"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>