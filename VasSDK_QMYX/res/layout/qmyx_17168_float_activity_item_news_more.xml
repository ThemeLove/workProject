<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/qmyx_17168_selector_white_listen_click"
                android:minHeight="100dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/iv_icon"
        android:lineSpacingExtra="7dp"
        android:maxLines="2"
        android:textColor="@color/qmyx_17168_deep_black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15dp"
        android:textColor="@color/qmyx_17168_light_black"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/qmyx_17168_shape_bg_red_stroke"
        android:textColor="@color/qmyx_17168_red_stroke"
        android:textSize="12sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/qmyx_17168_shape_divider_horizontal"/>

</RelativeLayout>