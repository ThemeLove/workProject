<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/qmyx_17168_bg_dialog_background_gray"
        android:orientation="vertical">

        <include
            android:id="@+id/header_nav"
            layout="@layout/qmyx_17168_top_nav_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/qmyx_17168_select_money"
            android:textColor="@color/qmyx_17168_light_black"
            android:textSize="@dimen/qmyx_17168_text_size_30"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_recharge_money_ten"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="10元"
                android:textColor="@color/qmyx_17168_deep_black"
                android:textSize="@dimen/qmyx_17168_text_size_32"/>

            <TextView
                android:id="@+id/tv_recharge_money_twenty"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="20元"
                android:textColor="@color/qmyx_17168_deep_black"
                android:textSize="@dimen/qmyx_17168_text_size_32"/>

            <TextView
                android:id="@+id/tv_recharge_money_thirty"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="30元"
                android:textColor="@color/qmyx_17168_deep_black"
                android:textSize="@dimen/qmyx_17168_text_size_32"/>


            <TextView
                android:id="@+id/tv_recharge_money_fifty"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="50元"
                android:textColor="@color/qmyx_17168_deep_black"
                android:textSize="@dimen/qmyx_17168_text_size_32"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_recharge_money_hundred"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="100元"
                android:textColor="@color/qmyx_17168_deep_black"
                android:textSize="@dimen/qmyx_17168_text_size_32"/>

            <EditText
                android:id="@+id/et_input_money"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="@string/qmyx_17168_other"
                android:maxLength="5"
                android:maxLines="1"
                android:inputType="number"
                android:textColor="@color/qmyx_17168_light_black"
                android:textColorHint="@color/qmyx_17168_light_grey"
                android:textSize="@dimen/qmyx_17168_text_size_30"/>

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"/>

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btn_recharge_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/ll_cs"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="130dp"
                android:background="@drawable/qmyx_17168_selector_confirm"
                android:gravity="center"
                android:text="@string/qmyx_17168_recharge"
                android:textColor="@color/qmyx_17168_white"/>

            <LinearLayout
                android:id="@+id/ll_cs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/qmyx_17168_shape_bar_white_bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_customer_service"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/qmyx_17168_service"/>

                <TextView
                    android:id="@+id/tv_qq_server"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/qmyx_17168_bg_button_service"
                    android:drawableLeft="@drawable/qmyx_17168_customer_qq"
                    android:drawablePadding="10dp"
                    android:paddingLeft="2dp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="@string/qmyx_17168_service_qq"
                    android:textColor="@color/qmyx_17168_white"
                    android:textSize="@dimen/qmyx_17168_text_size_28"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>