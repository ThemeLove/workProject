<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/ungame_view_title_default"/>

    <LinearLayout
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:background="@drawable/ungame_common_act_bg_white_light"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ungame_ic_recharge_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/ungame_blue"
            android:layout_gravity="center_horizontal"
            android:text="@string/ungame_lale_recharge_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ungame.android.sdk.widget.RoundButton
                android:text="@string/ungame_lale_recharge_back_game"
                android:layout_marginTop="10dp"
                android:id="@+id/ungame_txv_back_game"
                android:layout_height="38dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:enabled="true"
                app:btnCornerRadius="10dp"
                app:btnPressedRatio="0.8"
                app:btnSolidColor="@color/ungame_red"/>


            <com.ungame.android.sdk.widget.RoundButton
                android:text="@string/ungame_lale_recharge_again"
                android:layout_marginTop="10dp"
                android:id="@+id/ungame_txv_recharge_again"
                android:layout_height="38dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="70dp"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:enabled="true"
                app:btnCornerRadius="10dp"
                app:btnPressedRatio="0.8"
                app:btnSolidColor="@color/ungame_blue"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>