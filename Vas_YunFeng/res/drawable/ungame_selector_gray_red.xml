<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@android:color/white"/>

            <stroke
                android:dashWidth="0dp"
                android:width="1dp"
                android:color="@color/ungame_red" />

            <corners
                android:radius="8dp"/>

            <padding
                android:left="2dp"
                android:top="8dp"
                android:right="2dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/white"/>

            <stroke
                android:dashWidth="0dp"
                android:width="1dp"
                android:color="@color/ungame_gray_line" />

            <corners
                android:radius="8dp"/>

            <padding
                android:left="2dp"
                android:top="8dp"
                android:right="2dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/white"/>

            <stroke
                android:dashWidth="0dp"
                android:width="1dp"
                android:color="@color/ungame_gray_line" />

            <corners
                android:radius="8dp"/>

            <padding
                android:left="2dp"
                android:top="8dp"
                android:right="2dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>