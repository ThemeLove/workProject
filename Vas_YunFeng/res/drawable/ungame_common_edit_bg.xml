<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 圆角 -->
    <corners
        android:radius="6dp"/>

    <!-- 填充 -->
    <solid
        android:color="@android:color/white"/><!-- 填充的颜色 -->

    <!-- 间隔 -->
    <padding
        android:left="15dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/><!-- 各方向的间隔 -->

    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="#dfdfdf"
        android:dashWidth="0dp"
        android:dashGap="2dp"/>

</shape>