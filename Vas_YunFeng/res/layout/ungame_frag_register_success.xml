<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ungame_register_success_root"
    android:background="@drawable/ungame_coner_white_light_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/ungame_red"
        android:text="@string/ungame_title_register_success"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ungame_title_height" />

    <View
        android:background="@color/ungame_red"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/ungame_register_bottom_button"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ungame.android.sdk.widget.RoundButton
                android:text="@string/ungame_lable_register_success_save_to_photo"
                android:layout_marginRight="5dp"
                android:id="@+id/ungame_txv_register_save"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:clickable="true"
                android:enabled="true"
                app:btnCornerRadius="10dp"
                app:btnPressedRatio="0.8"
                app:btnSolidColor="@color/ungame_red"/>

            <com.ungame.android.sdk.widget.RoundButton
                android:text="@string/ungame_lable_register_success_i_known"
                android:layout_marginLeft="5dp"
                android:id="@+id/ungame_txv_register_i_know"
                android:layout_height="38dp"
                android:textColor="@color/ungame_red"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:enabled="true"
                app:btnCornerRadius="10dp"
                app:btnPressedRatio="0.8"
                app:btnStrokeWidth="1dp"
                app:btnStrokeColor="@color/ungame_red"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/ungame_coner_white_bg"
            android:layout_above="@+id/ungame_register_bottom_button"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ungame_txv_register_count"
                style="@style/ungame_user_text_default"
                android:text="第10000位注册用户"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ungame_txv_register_accout"
                style="@style/ungame_user_text_default"
                android:layout_marginTop="7dp"
                android:text="账号：gq521863363"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:background="@color/ungame_gray_line"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ungame_float_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:textColor="@color/ungame_gray_1"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/ungame_lable_register_success_text"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>