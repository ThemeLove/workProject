<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ungame_imv_request_no_network"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ungame_request_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/emptyView_empty_error"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ungame_imv_request_no_network"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ungame_gray_2"
        android:text="@string/ungame_lable_request_no_network"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>