<?xml version="1.0" encoding="utf-8"?>
<com.ungame.android.sdk.widget.EditTextObserverLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ungame_view_title_default" />


    <ScrollView
        android:background="@drawable/ungame_common_act_bg"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/ungame_txv_register_auto_accout_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ungame_register_auto_accout_tips"
                android:textColor="@color/ungame_balck_text_default"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ungame_edit_common_bg"
                android:orientation="horizontal">

                <com.ungame.android.sdk.widget.UngameClearEditText
                    android:id="@+id/ungame_edt_register_accout"
                    style="@style/ungame_user_edit_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ungame_ic_edit_user"
                    android:hint="@string/ungame_hint_register_accout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ungame_edit_common_bg"
                android:orientation="horizontal">

                <com.ungame.android.sdk.widget.UngameClearEditText
                    android:id="@+id/ungame_edt_register_passwd"
                    style="@style/ungame_user_edit_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ungame_ic_edit_passwd"
                    android:hint="@string/ungame_hint_login_password"
                    android:inputType="textPassword"
                    android:maxLength="20" />

            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/ungame_edt_register_remember_passwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@drawable/ungame_check_red"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:text="记住密码"
                    android:textColor="@color/ungame_balck_text_default"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/ungame_edt_register_auto_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:button="@drawable/ungame_check_red"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:text="自动登录"
                    android:textColor="@color/ungame_balck_text_default"
                    android:textSize="14sp" />

            </RelativeLayout>

            <com.ungame.android.sdk.widget.RoundButton
                android:id="@+id/ungame_txv_register_now"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:enabled="true"
                android:text="@string/ungame_lable_register_now"
                android:textColor="@android:color/white"
                app:btnCornerRadius="10dp"
                app:btnPressedRatio="0.8"
                app:btnSolidColor="@color/ungame_red" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ungame_txv_register_auto_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ungame_register_auto_agree"
                    android:textColor="@color/ungame_balck_text_default"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txv_register_auto_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ungame_register_auto_agree_suffix"
                    android:textColor="@color/ungame_blue"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</com.ungame.android.sdk.widget.EditTextObserverLayout>