<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gamecat_dialog_shape"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gamecat_dialog_title_shape">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/gamecatpay_close" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="支付"
                android:textColor="@color/gamecat_color_333"
                android:textSize="18sp" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/color_E5E5E5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="王国纪元:一箱元宝"
                android:textColor="@color/gamecat_color_888888"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="￥30"
                android:textColor="@color/color_37363B"
                android:textSize="35sp"
                android:visibility="visible" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_E5E5E5" />

            <GridView
                android:id="@+id/id_grid_view_pay_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:columnWidth="40dp"
                android:gravity="center"
                android:horizontalSpacing="0dp"
                android:listSelector="#00000000"
                android:numColumns="3"
                android:verticalSpacing="0dp" />

            <Button
                android:id="@+id/confirm_pay_button"
                style="@style/gamecatpay_button"
                android:layout_marginTop="30dp"
                android:text="确认支付" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>














