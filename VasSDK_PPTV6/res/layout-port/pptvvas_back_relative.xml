<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pptvvas_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/pptvvas_extends"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/pptvvas_bottom"
        android:background="@drawable/pptvvas4_bg_top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/pptvvas_bottom_leftcontainer"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/pptvvas_bar_text_height"
                android:layout_marginLeft="40px"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/pptvvas_bottom_left_arrow"
                    android:layout_width="20px"
                    android:layout_height="@dimen/pptvvas_bar_center_textsize"
                    android:background="@drawable/pptvvas4_back"
                    android:visibility="visible" />

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:id="@+id/pptvvas_bottom_left_tv"
                    android:layout_width="150px"
                    android:layout_height="@dimen/pptvvas_bar_text_height"
                    android:layout_marginLeft="10px"
                    android:gravity="center_vertical"
                    android:textColor="@color/pptvvas4_white"
                    android:textSize="@dimen/pptvvas_bar_textsize" />
            </LinearLayout>

            <com.pptv.vassdk.ui.widget.PPTVDTextView
                android:id="@+id/pptvvas5_topline"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/pptvvas4_gray_light"
                android:visibility="gone" />

            <com.pptv.vassdk.ui.widget.PPTVDTextView
                android:id="@+id/pptvvas5_title_relabackview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pptvvas_bottombar_small_height_portrait"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/pptvvas4_white"
                android:textSize="50px"
                android:visibility="gone" />

            <com.pptv.vassdk.ui.widget.PPTVDTextView
                android:id="@+id/top_line"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/pptvvas4_gray_light" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/pptvvas_bar_text_height"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:id="@+id/pptvvas_top_left_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textColor="@color/pptvvas4_white"
                    android:textSize="@dimen/pptvvas_bar_title_textsize" />

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:id="@+id/pptvvas4_seperater_lineleft"
                    android:layout_width="2px"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="45px"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginTop="45px"
                    android:background="@color/pptvvas4_gray"
                    android:visibility="gone" />

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:id="@+id/pptvvas_top_left_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/pptvvas4_white"
                    android:textSize="30px"
                    android:visibility="gone" />

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:id="@+id/pptvvas5_top_left_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-10px"
                    android:singleLine="true"
                    android:textColor="@color/pptvvas4_white"
                    android:textSize="30px"
                    android:visibility="gone" />
            </LinearLayout>

            <com.pptv.vassdk.ui.widget.PPTVDTextView
                android:id="@+id/pptvvas_topline2"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/pptvvas4_gray_light" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pptvvas_bottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pptvvas_bottombar_height_portrait"
        android:layout_alignParentBottom="true"
        android:background="@color/pptvvas4_transparent_blackground_bottom" >

        <com.pptv.vassdk.ui.widget.PPTVDTextView
            android:id="@+id/pptvvas_bottom_right_tv"
            android:layout_width="200px"
            android:layout_height="40px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:drawableRight="@drawable/pptvvas5_logo"
            android:gravity="center_vertical|right"
            android:textColor="@color/pptvvas4_white"
            android:textSize="@dimen/pptvvas_bar_textsize" />

        <com.pptv.vassdk.ui.widget.PPTVDTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3px"
            android:layout_toRightOf="@id/pptvvas_bottom_right_tv"
            android:gravity="center_vertical"
            android:text="v6.0"
            android:textColor="#b0ffffff"
            android:textSize="@dimen/pptvvas_bar_textsize" />

        <com.pptv.vassdk.ui.widget.PPTVDTextView
            android:id="@+id/pptvvas_top_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pptvvas_bar_text_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:gravity="center_vertical|right"
            android:textColor="@color/pptvvas4_white"
            android:textSize="@dimen/pptvvas_bar_textsize" />

        <TextView
            android:id="@+id/pptvvas5_right_top_tip"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15px"
            android:layout_marginTop="25px"
            android:background="@drawable/pptvvas5_tip_dot"
            android:gravity="center"
            android:singleLine="true"
            android:text="15"
            android:textColor="@color/pptvvas4_white"
            android:textSize="15px"
            android:visibility="gone" />

        <com.pptv.vassdk.ui.widget.PPTVDTextView
            android:id="@+id/pptvvas4_seperater_line"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginBottom="45px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="45px"
            android:layout_toLeftOf="@id/pptvvas_top_right_tv"
            android:background="@color/pptvvas4_gray"
            android:visibility="gone" />

        <com.pptv.vassdk.ui.widget.PPTVDTextView
            android:id="@+id/pptvvas_top_right_tv_first"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pptvvas_bar_text_height"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/pptvvas4_seperater_line"
            android:gravity="center_vertical|right"
            android:textColor="@color/pptvvas4_white"
            android:textSize="@dimen/pptvvas_bar_textsize"
            android:visibility="gone" />
    </RelativeLayout>

    <com.pptv.vassdk.ui.widget.PPTVDTextView
        android:id="@+id/pptvvas_bottom_center_tv"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pptvvas_bottombar_small_height_portrait"
        android:layout_above="@+id/pptvvas_bottom"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/pptvvas4_white"
        android:textSize="@dimen/pptvvas_bar_center_textsize"
        android:visibility="gone" />

</RelativeLayout>