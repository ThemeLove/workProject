<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/niuniu_main_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/niuniu_transparent_window_bg"
    android:gravity="center">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 登录框 -->

        <LinearLayout
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:background="@drawable/niuniu_conner_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_margin="10dip"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:text="请上传截图"
                    android:textColor="#909090"/>

                <ImageButton
                    android:id="@+id/niuniu_imb_colse_select_image"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:background="@null"
                    android:src="@drawable/niuniu_menu_btn_close" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/niuniu_color_silver" />



                <GridView
                    android:id="@+id/niuniu_gdv_select_image"
                    android:layout_width="match_parent"
                    android:layout_height="170dip"
                    android:horizontalSpacing="7dip"
                    android:verticalSpacing="7dip"
                    android:columnWidth="90dip"
                    android:scrollbars="none"
                    android:listSelector="@android:color/transparent"
                    android:clipToPadding="false"
                    android:numColumns="3"
                    android:padding="10dip"/>


            <Button
                android:id="@+id/niuniu_btn_ensure_select"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:background="@drawable/niuniu_login_btn"
                android:text="@string/niuniu_text_upload_image_sure"
                android:textColor="@drawable/niuniu_btn_text_color2"
                android:layout_gravity="bottom"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>