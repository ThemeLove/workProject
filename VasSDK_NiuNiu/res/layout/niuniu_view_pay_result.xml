<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/niuniu_transparent_window_bg">

    <RelativeLayout
        android:id="@+id/niuniu_rel_notice_main"
        android:layout_width="320dip"
        android:layout_height="200dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:layout_marginRight="5dip"
        android:layout_marginLeft="5dip"
        android:background="@drawable/niuniu_conner_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mTitleView_niuniu_view_pay_result"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/niuniu_notice_title_color"
                    android:textSize="20sp" />
                <ImageButton
                    android:id="@+id/niuniu_btn_imv_goto_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:layout_margin="10dip"
                    android:src="@drawable/niuniu_btn_act_voucher_close_imv"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/niuniu_bg_grey_cj"></View>


            <TextView
                android:id="@+id/niuniu_view_pay_result_desc"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/niuniu_bg_grey_cj"
                android:textSize="16sp"
                android:text="用户取消"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal">
                <Button
                    android:id="@+id/niuniu_btn_pay_result_kefu"
                    android:layout_width="match_parent"
                    android:layout_height="34dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginLeft="15dip"
                    android:text="@string/niuniu_btn_kefu"
                    android:background="@drawable/niuniu_btn_get_verify_bg"
                    android:textColor="@color/niuniu_color_white"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/niuniu_btn_pay_fail_result_goto_game"
                    android:layout_width="match_parent"
                    android:layout_height="34dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginLeft="15dip"
                    android:text="@string/niuniu_btn_goto_game"
                    android:background="@drawable/niuniu_btn_red_color_off"
                    android:textColor="@color/niuniu_color_white"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/niuniu_btn_pay_success_result_goto_game"
                    android:layout_width="match_parent"
                    android:layout_height="34dip"
                    android:layout_marginRight="50dip"
                    android:layout_marginLeft="50dip"
                    android:text="@string/niuniu_btn_goto_game"
                    android:background="@drawable/niuniu_btn_get_verify_bg"
                    android:textColor="@color/niuniu_color_white"
                    android:layout_weight="1"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>